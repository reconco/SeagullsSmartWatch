<UserControl x:Class="SeagullsSmartWatch.NumberTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeagullsSmartWatch"
             mc:Ignorable="d" Width="37" Height="20">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="textbox" Text="00" MinWidth="19" MaxLength="2" PreviewTextInput="CheckNumberic" TextChanged="TextChanged"/>
            <StackPanel Orientation="Vertical">
                <Button  x:Name="upButton" Content="▲" FontSize="5" Width="18" Height="10" Click="upButton_Click"/>
                <Button  x:Name="downButton" Content="▼" FontSize="5" Width="18" Height="10" Click="downButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
